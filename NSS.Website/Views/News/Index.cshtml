        </div>
    </div>
    <!-- /page_header -->

    <div class="container margin_30_40">
        <div class="row">
            <div class="col-lg-9">
                @if (Model != null)
                {
                    <div class="row">
                        @foreach (var item in Model.OrderByDescending(x => x.ID))
                        {
                            <div class="col-md-6">
                                <article class="blog">
                                    <figure>
                                        <a href="/blog-khuyen-mai/@item.CategoryLink/@item.Slug">
                                            <img src="@item.Images" class="img-responsive" style="width:100%" alt="">
                                            <div class="preview"><span>Read more</span></div>
                                        </a>
                                    </figure>
                                    <div class="post_info">
                                        <small>@item.CategoryName</small>
                                        <h2><a href="/blog-khuyen-mai/@item.CategoryLink/@item.Slug">@item.Title</a></h2>
                                        <p> @item.Description</p>

                                    </div>
                                </article>
                                <!-- /article -->
                            </div>
                        }
                    </div>
